{
  "name": "afrozy-backend",
  "version": "1.0.0",
  "description": "Afrozy Market - Modern e-commerce platform backend API",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production node index.js",
    "dev": "NODE_ENV=development nodemon index.js",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "migrate": "node scripts/createTables.js",
    "seed": "node scripts/addSampleStoreProducts.js",
    "setup": "npm run migrate && npm run seed",
    "docker:build": "docker build -t afrozy-backend .",
    "docker:run": "docker run -p 3001:3001 afrozy-backend"
  },
  "keywords": [
    "ecommerce",
    "marketplace",
    "nodejs",
    "express",
    "postgresql",
    "api",
    "afrozy"
  ],
  "author": "Afrozy Market Team",
  "license": "ISC",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.943.0",
    "@aws-sdk/lib-storage": "^3.943.0",
    "bcryptjs": "^3.0.3",
    "compression": "^1.7.4",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "sharp": "^0.32.6",
    "stripe": "^20.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3"
  }
}
