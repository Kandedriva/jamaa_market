# Database Configuration
PGHOST=your_postgres_host
PGDATABASE=your_database_name
PGUSER=your_database_user
PGPASSWORD=your_database_password
PGSSLMODE=require
DATABASE_URL=postgresql://user:password@host:5432/database

# JWT Configuration
JWT_SECRET=generate_a_secure_random_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Redis Configuration (for sessions/caching)
REDIS_URL=redis://localhost:6379

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@afrozymarket.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@afrozymarket.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# Monitoring & Analytics
LOG_LEVEL=info
ENABLE_METRICS=true
SENTRY_DSN=your-sentry-dsn-here

# API Keys & External Services
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
CLOUDINARY_CLOUD_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-key
CLOUDINARY_API_SECRET=your-cloudinary-secret

# Security Configuration
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12

# Production Security Notes:
# 1. Replace all placeholder values with actual configuration
# 2. Use a strong, randomly generated JWT secret (at least 64 characters)
# 3. Keep your .env file secure and never commit it to version control
# 4. Use environment-specific values for development, staging, and production
# 5. Enable SSL/TLS in production (PGSSLMODE=require)
# 6. Use secure, unique passwords for all services
# 7. Regularly rotate JWT secrets and API keys